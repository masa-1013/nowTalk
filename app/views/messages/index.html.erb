<div class="container">
  <main>
    <div id="messages">
      <%= render @messages %>
    </div>
  </main>
  <footer class="fixed-bottom">
    <%= form_with url: messages_index_path, scope: :message, id: 'new_message' do |f|%>
      <div class="form-group">
        <%= f.text_field :content, class: 'form-control', id: 'message_content' %>
      </div>
      <%= f.submit 'send', class: 'btn btn-primary' %>
    <% end %>
  </footer>
</div>
